# Environment Configuration Template
# Copy this file to .env and update the values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment: development, testing, production
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# PostgreSQL connection URL
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://cfc_user:cfc_password@localhost:5432/coins_for_change

# Database connection pool settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# REDIS SETTINGS
# =============================================================================

# Redis connection URL
# Format: redis://host:port/database_number
REDIS_URL=redis://localhost:6379/0

# Redis connection settings
REDIS_MAX_CONNECTIONS=100
REDIS_SOCKET_TIMEOUT=5

# =============================================================================
# OPENSEARCH SETTINGS
# =============================================================================

# OpenSearch connection URL
OPENSEARCH_URL=http://localhost:9200

# OpenSearch authentication (optional)
OPENSEARCH_USERNAME=
OPENSEARCH_PASSWORD=

# OpenSearch connection settings
OPENSEARCH_TIMEOUT=30
OPENSEARCH_MAX_RETRIES=3

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT secret key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-please

# JWT settings
JWT_ALGORITHM=HS256
JWT_EXPIRATION_SECONDS=3600

# Password requirements
PASSWORD_MIN_LENGTH=8

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# =============================================================================
# EMAIL SETTINGS
# =============================================================================

# SMTP configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# =============================================================================
# OBSERVABILITY SETTINGS
# =============================================================================

# OpenTelemetry Jaeger exporter endpoint
OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Prometheus pushgateway URL (optional)
PROMETHEUS_GATEWAY_URL=http://localhost:9091

# Service name for tracing and logging
SERVICE_NAME=coins-for-change

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate limiting settings
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Add any external service configurations here
# Example:
# EXTERNAL_API_KEY=your-api-key
# EXTERNAL_API_URL=https://api.example.com

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development-specific settings
# These are typically only used in development environment

# Auto-reload on code changes (for uvicorn)
RELOAD=true

# Additional debug flags
SQL_ECHO=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production-specific settings
# Uncomment and configure these for production deployment

# SSL/TLS settings
# SSL_KEYFILE=/path/to/keyfile.pem
# SSL_CERTFILE=/path/to/certfile.pem

# Security headers
# SECURE_HEADERS=true

# Session settings
# SESSION_COOKIE_SECURE=true
# SESSION_COOKIE_HTTPONLY=true
# SESSION_COOKIE_SAMESITE=strict

# =============================================================================
# TESTING SETTINGS
# =============================================================================

# Test database URL (used when ENVIRONMENT=testing)
TEST_DATABASE_URL=postgresql+asyncpg://cfc_user:cfc_password@localhost:5432/coins_for_change_test

# Test-specific settings
TEST_REDIS_URL=redis://localhost:6379/1
TEST_OPENSEARCH_URL=http://localhost:9200