{
  "mcpServers": {
    "postgresql": {
      "command": "uvx",
      "args": [
        "mcp-server-postgresql"
      ],
      "env": {
        "PG_HOST": "localhost",
        "PG_PORT": "5432",
        "PG_USER": "postgres",
        "PG_PASSWORD": "postgres",
        "PG_DATABASE": "coins_for_change",
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "autoApprove": [
        "postgres_query",
        "postgres_schema_info",
        "postgres_list_tables"
      ]
    },
    "docker": {
      "command": "uvx",
      "args": [
        "mcp-server-docker"
      ],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "autoApprove": [
        "docker_ps",
        "docker_images",
        "docker_logs",
        "docker_inspect",
        "list_containers"
      ]
    },
    "kubernetes": {
      "command": "uvx",
      "args": [
        "mcp-server-kubernetes"
      ],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "autoApprove": [
        "kubectl_get",
        "kubectl_describe",
        "kubectl_logs",
        "kubectl_get_by_name",
        "kubectl_get_by_kind_in_namespace"
      ]
    },
    "redis": {
      "command": "uvx",
      "args": [
        "mcp-server-redis"
      ],
      "env": {
        "REDIS_URL": "redis://localhost:6379",
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": true,
      "autoApprove": [
        "redis_get",
        "redis_set",
        "redis_keys",
        "redis_info"
      ]
    },
    "sqlite": {
      "command": "uvx",
      "args": [
        "mcp-server-sqlite",
        "--db-path",
        "./coins_for_change.db"
      ],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": true,
      "autoApprove": [
        "read-query",
        "write-query",
        "create-table",
        "list-tables",
        "describe-table"
      ]
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/chris/github/cfc"
      ],
      "env": {},
      "disabled": false,
      "autoApprove": [
        "read_file",
        "list_directory",
        "search_files",
        "get_file_info",
        "read_text_file"
      ]
    },
    "git": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-git",
        "--repository",
        "/Users/chris/github/cfc"
      ],
      "env": {},
      "disabled": false,
      "autoApprove": [
        "git_status",
        "git_diff",
        "git_log",
        "git_show"
      ]
    },
    "shell": {
      "command": "uvx",
      "args": [
        "mcp-server-shell"
      ],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "autoApprove": []
    },
    "time": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-time"
      ],
      "env": {},
      "disabled": false,
      "autoApprove": [
        "get_current_time",
        "convert_timezone",
        "format_time"
      ]
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {},
      "disabled": false,
      "autoApprove": [
        "create_memory",
        "search_memory",
        "get_memory",
        "search_nodes"
      ]
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {},
      "disabled": false,
      "autoApprove": [
        "get_context",
        "search_docs",
        "resolve-library-id",
        "get-library-docs"
      ]
    }
  }
}